{
  "name": "@creonow/desktop",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "start": "electron-vite preview",
    "rebuild:native": "electron-rebuild -f -w better-sqlite3",
    "test:e2e": "pnpm rebuild:native && pnpm build && playwright test -c tests/e2e/playwright.config.ts",
    "build:win": "pnpm rebuild:native && pnpm build && electron-builder --win nsis zip --config electron-builder.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build -o storybook-static",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tiptap/react": "^2.26.0",
    "@tiptap/starter-kit": "^2.26.0",
    "better-sqlite3": "^12.6.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sqlite-vec": "0.1.7-alpha.2",
    "yaml": "^2.4.5",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.18",
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^5.0.0",
    "jsdom": "^27.4.0",
    "storybook": "^8.6.14",
    "tailwindcss": "^4.1.18",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
