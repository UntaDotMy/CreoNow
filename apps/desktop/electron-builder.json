{
  "appId": "com.creonow.app",
  "productName": "CreoNow",
  "directories": {
    "output": "dist-electron"
  },
  "files": ["dist/**", "package.json"],
  "asar": true,
  "asarUnpack": ["**/*.node", "**/*.dll"],
  "win": {
    "target": [
      { "target": "nsis", "arch": ["x64"] },
      { "target": "zip", "arch": ["x64"] }
    ]
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true
  }
}
